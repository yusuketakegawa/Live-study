<div class ="container">
  <div class ="row ">
    <div class ="top__content col s12  ">
      <h6 class ="blockquote ">
        <blockquote>
          勉強部屋を検索しよう
        </blockquote>
      </h6>
      <div class="input-field col s12 ">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="1">Option 1</option>
          <option value="2">Option 2</option>
          <option value="3">Option 3</option>
        </select>
        <label>部屋の種類</label>
      </div>
      <div class="input-field col s12 ">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="1">Option 1</option>
          <option value="2">Option 2</option>
          <option value="3">Option 3</option>
        </select>
        <label>使用ツール</label>
      </div>
      <div class="input-field col s12 ">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="1">Option 1</option>
          <option value="2">Option 2</option>
          <option value="3">Option 3</option>
        </select>
        <label>参加人数</label>
      </div>
      <a class="waves-effect waves-light btn "><i class="material-icons left">search</i>検索</a>
    </div>
  </div>
  <div class ="row">
    <div class ="main__content">
      <h6 class ="blockquote ">
        <blockquote>
          現在開催中の部屋一覧
        </blockquote>
      </h6>
      <% @studies.each do |s|%>
        <div class ="col s12 m6 l4">
          <div class="card col">
            <div class="card-image ">
              <%= image_tag s.image.url, class: 'index__image'%>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= s.name %><i class="material-icons right">more_vert</i></span>
              <div class="content__row">
                <div class="content__row__right">
                  <%= link_to study_path(s.id), class: "btn " do%>
                    詳細
                  <% end %>
                </div>
                <div class ="content__row__left">
                  <%= image_tag s.tool.image, size:50%>
                </div>
              </div>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= s.name %><i class="material-icons right">close</i></span>
              <p><%= s.introduce %></p>
              <p><%= "~#{s.end_at.strftime('%H:%M')}終了" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
