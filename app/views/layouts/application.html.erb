<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
    <title>LiveStudy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class= "navbar-fixed shadow-text">
      <nav class="nav-wraper  deep-purple accent-2">
        <a href="/" class="brand-logo left">
          <%= image_tag "Live Study-logo-white.png", class: "study__logo"%>
        </a>
        <a href="#" class="sidenav-trigger right " data-target="mobile-links">
          <i class="material-icons">menu</i>
        </a>
        <ul class="right hide-on-large-only">
          <li>
            <%= link_to user_path(current_user), class: "tooltipped", data: {position: "bottom", tooltip:"通知"} do %>
              <i class="material-icons">notifications</i>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user), class: "tooltipped", data: {position: "bottom", tooltip:"メッセージ"} do %>
              <i class="material-icons">email</i>
            <% end %>
          </li>
        </ul>
        <% if user_signed_in? %>
          <ul class="right hide-on-med-and-down">
            <li>
              <%= link_to user_path(current_user), class: "tooltipped", data: {position: "bottom", tooltip:"通知"} do %>
                <i class="material-icons">notifications</i>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user), class: "tooltipped", data: {position: "bottom", tooltip:"メッセージ"} do %>
                <i class="material-icons">email</i>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user), class: "tooltipped", data: {position: "bottom", tooltip:"マイページ"} do %>
                <i class="material-icons">person</i>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: "tooltipped", data: {position: "bottom", tooltip:"ログアウト"} do %>
                <i class="material-icons">exit_to_app</i>
              <% end %>
            </li>
          <% else %>
            <li><%= link_to "ログイン", new_user_session_path %></li>
            <li><%= link_to "新規登録", new_user_registration_path  %></li>
          <% end %>
        </ul>
      </nav>
    </div>
    <ul class="sidenav" id="mobile-links">
      <div class="menu">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user) do %>
              <i class="material-icons">person</i>
              <p>マイページ</p>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete  do %>
              <i class="material-icons">exit_to_app</i>
              <p>ログアウト</p>
            <% end %>
          </li>
          <li>
            <%= link_to  edit_user_path(current_user) do %>
              <i class="material-icons">edit</i>
              <p>編集</p>
            <% end %>
          </li>
          <li>
            <%= link_to  new_study_path(current_user) do %>
              <i class="material-icons">add</i>
              <p>新規作成</p>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
          <li><%= link_to "新規登録", new_user_registration_path  %></li>
        <% end %>
      </div>
    </ul>
    <%= render partial:'layouts/notifications'%>
    <%= yield %>
    <div class="fixed-action-btn ">
      <%= link_to new_study_path(current_user) do %>
        <div class="btn-floating btn-large  ">
          <i class="large material-icons">add</i>
        </div>
      <% end %>
    </body>
  </html>
