<%= form_for(current_user) do |f| %>
  <div class ="container study__show">
    <div class="study__show__content new__content col s12 m12 l12">
      <div class="card">
        <div class="card-image study__show__image new__content__top">
          <div class=" new__content__image ">
            <% if current_user.image.present?%>
              <div class="prev-content">
                <%= image_tag current_user.image.url, alt: "preview", class: "prev-image", size: 100%>
                <%= f.label :image, class: "form-image " do%>
                  <i class="fa fa-camera prev-contents"></i>
                  <p>画像を選択する(任意)</p>
                  <%= f.file_field :image, class: "new__content__field "%>
                  <% end%>
                </div>
              <% else %>
                <%= f.label :image, class: "form-image " do%>
                  <i class="fa fa-camera prev-contents"></i>
                  <p>画像を選択する(任意)</p>
                  <%= f.file_field :image, class: "new__content__field "%>
                <% end %>
              <% end %>
            </div>
            <div class="study__show__image__left new__content__right">
              <div class="input-field col s6 new__content__right__name">
                <%= f.text_field :nickname,class: "materialize-textarea" %>
                <%= f.label :nickname%>
              </div>
              <div class="input-field col s12 new__content__right__name">
                <%= f.text_area :introduce,class: "materialize-textarea" %>
                <%= f.label :introduce%>
              </div>
            </div>
          </div>
          <ul class="collection new__content__ul">
            <li class="collection-item avatar new__content__li">
              <i class="material-icons circle teal lighten-1">email</i>
              <div class="input-field col s12 m6">
                <%= f.email_field :email %>
                <%= f.label :email %>
              </div>
            </li>
            <li class="collection-item avatar new__content__li">
              <i class="material-icons circle teal lighten-1">link</i>
              <p class="test">Slack通知(Slack Webhook URL)</p>
              <div class="input-field col s12 m6">
                <%= f.text_field :slack_url %>
                <%= f.label :slack_url %>
              </div>
              <p class="slack_url">
                <a href="https://slack.com/intl/ja-jp/help/articles/115005265063-Slack-%E3%81%A7%E3%81%AE-Incoming-Webhook-%E3%81%AE%E5%88%A9%E7%94%A8">Slack</a>でLIve-studyの通知を受け取ることができます
              </p>
            </li>
              <div class="input-field col s12">
                <%= f.submit "更新", class: "btn edit__btn"%>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
